<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Monetria.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
        Width="1280" Height="720"
        x:Class="Monetria.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/Images/Monetria-Dark-Mode-icon.png"
        Title="Monetria">
    

        <SplitView IsPaneOpen="{Binding IsPaneOpen }"
                   DisplayMode="CompactInline"
                   OpenPaneLength="200"
                   CompactPaneLength="50"
                   PaneBackground="#1e1e1e"
                   Background="#1e1e1e">
            
            <SplitView.Pane>
         <Grid RowDefinitions="*,Auto" Background="#1e1e1e" Margin="5">

        <!-- conteudo principal -->
        <Grid Grid.Row="0"
              RowDefinitions="Auto,Auto,*"
              Background="#1e1e1e">

            <!-- Botão -->
            <Button Command="{Binding OpenPaneCommand}"
                               HorizontalAlignment="Left">
                               <PathIcon Foreground="White"
                               Data="{StaticResource line_horizontal_3_regular}" />
            </Button>

            <!-- Logo -->
            <Image Grid.Row="1"
                   Source="../Assets/Images/Monetria-Dark-Mode.png"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Top" />

            <!-- MENU -->
            <Grid Grid.Row="2"
                  RowDefinitions="*,Auto"
                  Background="#1e1e1e">

                <!-- Itens do topo -->
                <ListBox Grid.Row="0"
                         ItemsSource="{Binding ItemsTopo}"
                         SelectedItem="{Binding SelectedListItem}"
                         Background="#1e1e1e"
                         Foreground="White">
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:ListItemTemplate}">
                            <StackPanel Orientation="Horizontal" Spacing="15">
                                <PathIcon Foreground="White"
                                          Data="{Binding ListItemIcon}" />
                                <TextBlock Text="{Binding Label}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Configurações FIXO EMBAIXO -->
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding ItemsFundo}"
                         SelectedItem="{Binding SelectedListItem}"
                         Background="#1e1e1e"
                         Foreground="White">
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:ListItemTemplate}">
                            <StackPanel Orientation="Horizontal" Spacing="15">
                                <PathIcon Foreground="White"
                                          Data="{Binding ListItemIcon}" />
                                <TextBlock Text="{Binding Label}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </Grid>
        </Grid>
    </Grid>
</SplitView.Pane>

            
            
            
            <SplitView.Content>
                <Border CornerRadius="10,0,0,0" Background="#2d2d2d">
                <TransitioningContentControl Content="{Binding CurrentPage}"></TransitioningContentControl>
                </Border>
            </SplitView.Content>
        </SplitView>
           

        
    

</Window>
