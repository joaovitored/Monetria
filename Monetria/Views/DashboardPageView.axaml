<UserControl xmlns="https://github.com/avaloniaui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             xmlns:vm="using:Monetria.ViewModels" 
             mc:Ignorable="d" x:Class="Monetria.Views.DashboardPageView"
             x:DataType="vm:DashboardPageViewModel">
     <ScrollViewer>
         
         <StackPanel Spacing="10" Margin="10" Orientation="Vertical"> <TextBlock Text="Bem vindo ao Dashboard!" FontSize="20" FontWeight="Bold"/>
              <TextBox BorderThickness="0" TextWrapping="Wrap">ASDKAKLDKALJDKLAJDLKAJDK</TextBox>
              
              <Grid RowDefinitions="Auto,*,*" Margin="10" RowSpacing="10">
                   <!-- Gráfico de Pizza --> <lvc:PieChart Grid.Row="1"
                                                           Height="420" Series="{Binding PieSeries}"
                                                           LegendPosition="Left"/> <!-- Gráfico de Linha (DateTime) --> 
                   <lvc:CartesianChart Grid.Row="2" Height="450" 
                                       Series="{Binding LineSeries}"
                                       HorizontalAlignment="Stretch"/>
              </Grid>
          </StackPanel>
     </ScrollViewer>
</UserControl>